<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_nodata_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/module_nodata_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/transparent"/>

    <TextView
        android:id="@+id/module_nodata_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textSize="45dp"
        android:textIsSelectable="false"
        android:textStyle="italic"
        android:textColor="#cccccc"
        />

    <TextView
        android:id="@+id/module_nodata_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/module_nodata_text"
        android:text="点击屏幕，重新加载"
        android:textColor="#d2d2d2"
        android:textSize="@dimen/textsize_content" />

</RelativeLayout>