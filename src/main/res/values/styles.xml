<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bluePrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:windowBackground">@color/colorBackgroudDark</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AndFrame">
    </style>

    <style name="AndFrame.Divison">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/division_line</item>
        <item name="android:background">@color/colorDivison</item>
        <item name="android:divider">@color/colorDivison</item>
        <item name="android:dividerHeight">@dimen/division_line</item>
    </style>

    <style name="AndFrame.Divison.Middle">
        <item name="android:layout_marginLeft">@dimen/padding_common</item>
        <!--<item name="android:layout_marginStart">@dimen/padding_common</item>-->
    </style>

    <style name="AndFrame.Divison.Dash">
        <item name="android:layout_height">2dp</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@drawable/af_dashline_divison</item>
        <item name="android:divider">@drawable/af_dashline_divison</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="AndFrame.Divison.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/division_line</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorDivison</item>
    </style>

    <style name="AndFrame.Divison.Vertical.Dash">
        <item name="android:layout_width">2dp</item>
        <item name="android:background">@drawable/af_dashline_divison_vertical</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="AndFrame.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="AndFrame.Label.Layout">
        <item name="android:paddingTop">@dimen/padding_common_v</item>
        <item name="android:paddingBottom">@dimen/padding_common_v</item>
        <item name="android:paddingLeft">@dimen/padding_common_h</item>
        <item name="android:paddingRight">@dimen/padding_common_h</item>
    </style>

    <style name="AndFrame.Label.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <style name="AndFrame.Label.Title.Large">
        <item name="android:textSize">@dimen/textsize_titlelarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AndFrame.Label.Title.Small">
        <item name="android:textSize">@dimen/textsize_titlesmall</item>
    </style>

    <style name="AndFrame.Label.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="AndFrame.Label.Discription">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AndFrame.Label.Assistant">
        <item name="android:textColor">@color/colorTextAssistant</item>
        <item name="android:textSize">@dimen/textsize_content</item>
    </style>

    <style name="AndFrame.Button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/af_button_primary</item>
    </style>

    <style name="AndFrame.Button.Blue">
        <item name="android:background">@drawable/af_button_blue</item>
    </style>

    <style name="AndFrame.Button.Green">
        <item name="android:background">@drawable/af_button_green</item>
    </style>

    <style name="AndFrame.Button.Orange">
        <item name="android:background">@drawable/af_button_orange</item>
    </style>

    <style name="AndFrame.Button.Red">
        <item name="android:background">@drawable/af_button_red</item>
    </style>

    <style name="AndFrame.Button.Purple">
        <item name="android:background">@drawable/af_button_purple</item>
    </style>

    <style name="AndFrame.Button.Primary">
        <item name="android:background">@drawable/af_button_primary</item>
    </style>

    <style name="AndFrame.Toolbar" parent="AndFrame.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textSize">@dimen/textsize_titlebar</item>
        <item name="android:textColor">@color/colorToolbarText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@color/colorToolbarText</item>
        <item name="actionMenuTextColor">@color/colorToolbarText</item>
    </style>

    <style name="AndFrame.Toolbar.Light">
        <item name="android:background">@color/colorToolbarBackgroundLight</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:textColor">@color/colorToolbarTextDark</item>
    </style>

    <style name="AndFrame.Toolbar.Title" parent="AndFrame.Label">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_titlebar</item>
        <item name="android:textColor">@color/colorToolbarText</item>
    </style>

    <style name="AndFrame.Toolbar.Action" parent="AndFrame.Label"
        tools:ignore="PrivateResource">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">@dimen/textsize_titlesmall</item>
        <item name="android:textColor">@color/colorToolbarText</item>
        <item name="android:background">?attr/controlBackground</item>
        <item name="android:paddingTop">@dimen/padding_common_d</item>
        <item name="android:paddingBottom">@dimen/padding_common_d</item>
        <item name="android:paddingLeft">@dimen/padding_common_h</item>
        <item name="android:paddingRight">@dimen/padding_common_h</item>
    </style>

    <style name="AndFrame.Toolbar.Title.Dark">
        <item name="android:textColor">@color/colorToolbarTextDark</item>
    </style>

    <style name="AndFrame.CommonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AndFrame.CommonBar.Panel">
        <item name="android:layout_marginTop">@dimen/padding_common</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/af_background_panel</item>
    </style>

    <style name="AndFrame.CommonBar.PanelLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/padding_common</item>
    </style>

    <style name="AndFrame.CommonBar.Bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/padding_common</item>
        <item name="android:paddingRight">@dimen/padding_common</item>
        <!--<item name="android:paddingTop">@dimen/padding_common_d</item>-->
        <!--<item name="android:paddingBottom">@dimen/padding_common_d</item>-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/af_selector_background_white</item>-->
    </style>

    <style name="AndFrame.CommonBar.Bar.Alone">
        <item name="android:layout_marginTop">@dimen/padding_common</item>
        <item name="android:background">@drawable/af_selector_background_white</item>
    </style>

    <style name="AndFrame.CommonBar.Content" parent="AndFrame.Label">
        <item name="android:singleLine">false</item>
        <!--<item name="android:layout_margin">@dimen/padding_common_d</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingTop">2dp</item>-->
        <!--<item name="android:paddingBottom">2dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/padding_common_d</item>-->
        <!--<item name="android:paddingRight">@dimen/padding_common</item>-->
        <item name="android:paddingTop">@dimen/padding_common</item>
        <item name="android:paddingBottom">@dimen/padding_common</item>
        <item name="android:paddingLeft">@dimen/padding_common_d</item>
        <item name="android:paddingRight">@dimen/padding_common_d</item>
        <item name="android:drawablePadding">@dimen/padding_common</item>
    </style>

    <style name="AndFrame.CommonBar.Content.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AndFrame.CommonBar.Value" parent="AndFrame.Label.Assistant">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|end</item>
        <item name="android:paddingTop">@dimen/padding_common</item>
        <item name="android:paddingBottom">@dimen/padding_common</item>
        <item name="android:paddingLeft">@dimen/padding_common_d</item>
        <item name="android:paddingRight">@dimen/padding_common_d</item>
        <item name="android:drawablePadding">@dimen/padding_common</item>
        <!--<item name="android:layout_marginEnd">@dimen/padding_common_d</item>-->
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
